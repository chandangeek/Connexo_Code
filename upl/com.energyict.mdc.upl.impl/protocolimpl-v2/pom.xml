<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>protocolimpl-v2</artifactId>
    <packaging>jar</packaging>
    <name>protocolimpl-v2</name>

    <parent>
        <groupId>com.energyict</groupId>
        <artifactId>protocols</artifactId>
        <version>9.1.23</version>
    </parent>

    <dependencies>
        <!-- EIServer dependencies -->
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdw</artifactId>
        </dependency>

        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdwimpl</artifactId>
        </dependency>

        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdwutil</artifactId>
        </dependency>

        <dependency>
            <groupId>com.energyict.comserver</groupId>
            <artifactId>comserver-core-impl</artifactId>
            <scope>test</scope>
            <exclusions>        <!--Only comserver-core-impl-->
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>com.energyict.dataconcentrator.communicationdrivers</groupId>
            <artifactId>wavenis-driver</artifactId>
            <version>1.0.1</version>
            <exclusions>
                <exclusion>
                    <groupId>com.energyict</groupId>
                    <artifactId>mdw</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.energyict</groupId>
                    <artifactId>mdwimpl</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>com.energyict.comserver</groupId>
            <artifactId>comserver-core-common</artifactId>
            <scope>test</scope>
            <exclusions>        <!--Only comserver-core-common-->
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Dependencies from protocols project -->
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>dlms</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>protocolimpl</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>protocolimpl-elster</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>connectiontypes</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
            <exclusions>        <!--Only connectiontypes-->
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>protocolcommon</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdwdevtools</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-api-mockito</artifactId>
        </dependency>

        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-module-junit4</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <!-- This proguard plugin is used to obfuscate the protocolimpl-v2 jar-->
            <plugin>
                <groupId>com.pyx4me</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>${proguard.maven.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <proguardVersion>${proguard.version}</proguardVersion>
                    <maxMemory>512m</maxMemory>
                    <options>
                        <option>-allowaccessmodification</option>
                    </options>
                    <proguardInclude>${basedir}/protocolimpl-v2.pro</proguardInclude>
                    <libs>
                        <lib>${java.home}/lib/rt.jar</lib>
                        <lib>${java.home}/lib/jsse.jar</lib>
                        <lib>${java.home}/lib/jce.jar</lib>
                    </libs>
                </configuration>

                <dependencies>
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard</artifactId>
                        <version>${proguard.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard-base</artifactId>
                        <version>${proguard.version}</version>
                    </dependency>
                </dependencies>
            </plugin>

            <!-- This plugin is used to add the 'generated-sources' folder to the source folder.-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <id>test</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/src/generated-sources/jaxws-maven-plugin/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
