<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <artifactId>protocolcommon</artifactId>
    <name>protocolcommon</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.energyict</groupId>
        <artifactId>protocols</artifactId>
        <version>9.0.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdw</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <!-- ComServer dependencies -->
        <dependency>
            <groupId>com.energyict.comserver</groupId>
            <artifactId>comserver-core-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.easytesting</groupId>
            <artifactId>fest-assert-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>

                    </execution>
                </executions>

            </plugin>
        </plugins>
    </build>


    <!--
The two profiles define two different repositories.
The default one will deploy the protocolcommon jar to the local nexus repo.
By using the command "mvn deploy -Delster.deploy=true", the protocolcommon jar will be deployed to the nexus-elster repo.
    -->
    <profiles>
        <profile>
            <id>deployment-elster</id>

            <activation>
                <property>
                    <name>elster.deploy</name>
                    <value>true</value>
                </property>
            </activation>

            <distributionManagement>

                <repository>
                    <id>elster-releases</id>
                    <name>Elster releases repository</name>
                    <url>http://source.eict.vpdc/nexus-elster/content/repositories/releases/</url>
                </repository>

                <snapshotRepository>
                    <id>elster-snapshots</id>
                    <name>Elster snapshots repository</name>
                    <url>http://source.eict.vpdc/nexus-elster/content/repositories/snapshots/</url>
                    <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>

            </distributionManagement>

        </profile>

        <profile>
            <id>deployment-eict</id>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <distributionManagement>

                <repository>
                    <id>eict-releases</id>
                    <name>EnergyICT releases repository</name>
                    <url>http://source.eict.vpdc/nexus/content/repositories/releases/</url>
                </repository>

                <snapshotRepository>
                    <id>eict-snapshots</id>
                    <name>EnergyICT snapshots repository</name>
                    <url>http://source.eict.vpdc/nexus/content/repositories/snapshots/</url>
                    <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>

            </distributionManagement>
        </profile>
    </profiles>

</project>
