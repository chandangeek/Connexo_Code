<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.elster.jupiter</groupId>
        <artifactId>platform</artifactId>
        <version>1.5.0${revision}</version>
        <relativePath>../com.elster.jupiter.platform/pom.xml</relativePath>
    </parent>
    <artifactId>hsm</artifactId>
    <version>1.0.0${revision}</version>
    <name>[HSM] com.elster.jupiter.hsm</name>
    <packaging>bundle</packaging>

    <properties>
        <bouncycastle.version>1.58</bouncycastle.version>
        <spring.version>4.3.10.RELEASE</spring.version>
        <jackson.version>2.4.0</jackson.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <_include>bnd.bnd</_include>
                        <Embed-Dependency>
                            artifactId=jss-runtime-embedded|antlr|bcmail-jdk15on|bcpkix-jdk15on|bcprov-jdk15on|bcprov-ext-jdk15on|commons-lang3|commons-logging|groovy|gson|guava|lobback-classic|logback-core|metrics-core|netty-all|slf4j-api|spring-aop|spring-beans|spring-context|spring-core|spring-expression|spring-jdbc|spring-tx|jackson-core|jackson-databind|jackson-annotations|jackson-datatype-guava
                        </Embed-Dependency>
                    </instructions>
                </configuration>
                <executions>
                    <execution>
                        <id>include-dependecies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!--
    WARNING:
    THIRD PARTY DEPENDENCIES NEED TO BE EXPLICITLY ADDED TO THE bnd.bnd FILE
    IN ORDER FOR OSGI TO BE ABLE TO IMPORT THE DEPENDENCIES!
    -->

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.3.1</version>
            <scope>provided</scope>
        </dependency>
