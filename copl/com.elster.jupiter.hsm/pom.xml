    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.elster.jupiter</groupId>
        <artifactId>platform</artifactId>
        <version>7.1.0-Kratos</version>
    </parent>
    <artifactId>hsm</artifactId>
    <name>[Jupiter] com.elster.jupiter.hsm</name>
    <packaging>bundle</packaging>

    <properties>
        <jss.version>9.8.0</jss.version>
        <!-- This version is smaller than JSS uses but it is incompatible with out bundle plugin since it is java 9 jar (the one used by JSS, 1.64)-->
        <bouncycastle.jss.version>1.64</bouncycastle.jss.version>
        <spring.version>5.2.3.RELEASE</spring.version>
        <jackson.version>2.4.0</jackson.version>
        <antlr.version>4.8</antlr.version>
        <netty.version>4.1.45.Final</netty.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>
                            artifactId=jss-runtime-embedded|jss-commondev|jss-commondev-base|jss-core|antlr4|antlr4-runtime|antlr-runtime|bcpkix-jdk15to18|bcprov-jdk15to18|checker-qual|commons-lang3|classmate|failureaccess|groovy|gson|guava|icu4j|hibernate-validator|jakarta.validation-api|javax.el|javax.json|jboss-logging|jcl-over-slf4j|logback-classic|logback-core|metrics-core|netty-buffer|netty-codec|netty-common|netty-handler|netty-resolver|netty-transport|org.abego.treelayout.core|slf4j-api|spring-aop|spring-beans|spring-context|spring-core|spring-expression|spring-jcl|spring-jdbc|spring-tx|ST4|validation-api
                        </Embed-Dependency>
                    </instructions>
                </configuration>
                <executions>
                    <execution>
                        <id>include-dependecies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration combine.self="override">
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>E2E</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration combine.self="override">
                            <includes>
                                <include>**/*IT.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

