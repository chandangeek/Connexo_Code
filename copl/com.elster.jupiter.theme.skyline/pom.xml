<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.elster.jupiter</groupId>
        <artifactId>platform</artifactId>
        <version>1.3.0${revision}</version>
        <relativePath>../com.elster.jupiter.platform/pom.xml</relativePath>
    </parent>

    <artifactId>theme.skyline</artifactId>
    <version>1.3.0${revision}</version>
    <packaging>bundle</packaging>
    <name>[Jupiter] com.elster.jupiter.theme.skyline</name>

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>http.whiteboard</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>sencha-build</id>
            <properties>
                <js.dir>js/skyline</js.dir>
                <package.name>uni-theme-skyline</package.name>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>add-compiled-js</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>add-resource</goal>
                                </goals>
                                <configuration>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/target/web</directory>
                                            <targetPath>${js.dir}/build</targetPath>
                                            <includes>
                                                <!--  WATCH OUT : our build is case sensitive !!!! -->
                                                <include>*.html</include>
                                                <include>*.js</include>
                                                <include>resources/**/*</include>
                                            </includes>
                                            <excludes>
                                                <exclude>resources/packages/**/*</exclude>
                                                <exclude>resources/resources/**/*</exclude>
                                                <exclude>resources/sass/**/*</exclude>
                                            </excludes>
                                        </resource>
                                        <resource>
                                            <directory>src/main/web</directory>
                                            <excludes>
                                                <exclude>${js.dir}/*.html</exclude>
                                                <exclude>${js.dir}/*.js</exclude>
                                                <exclude>${js.dir}/resources/**/*</exclude>
                                                <exclude>${js.dir}/build/**/*</exclude>
                                            </excludes>

                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

