<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.elster.jupiter</groupId>
    <artifactId>parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Jupiter parent pom</name>

    <organization>
        <name>Elster</name>
        <url>www.elster.com</url>
    </organization>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>4.3.1</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.compendium</artifactId>
                <version>4.3.1</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- Repositories specification. -->
    <repositories>
        <repository>
            <id>eict-public-snapshots</id>
            <name>EnergyICT snapshots repository group</name>
            <url>http://source.eict.vpdc/nexus/content/groups/public-snapshots/
            </url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>eict-public</id>
            <name>EnergyICT public repository group</name>
            <url>http://source.eict.vpdc/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>maven-repository.dev.java.net</id>
            <name>Java.net Repository for Maven 1</name>
            <url>http://download.java.net/maven/1/</url>
            <layout>legacy</layout>
        </repository>
        <repository>
            <id>maven2-repository.dev.java.net</id>
            <name>Java.net Repository for Maven 2</name>
            <url>http://download.java.net/maven/2/</url>
        </repository>
        <repository>
            <id>JBoss</id>
            <name>JBoss repository</name>
            <url>http://repository.jboss.com/maven2/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!-- Plugin repository specification -->
    <pluginRepositories>
        <pluginRepository>
            <id>eict-plugins</id>
            <name>EnergyICT plugin repository</name>
            <url>http://source.eict.vpdc/nexus/content/repositories/plugins/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <!-- Distribution management. -->
    <distributionManagement>
        <repository>
            <id>eict-releases</id>
            <name>EnergyICT releases repository</name>
            <url>http://source.eict.vpdc/nexus/content/repositories/releases/</url>
        </repository>

        <snapshotRepository>
            <id>eict-snapshots</id>
            <name>EnergyICT snapshots repository</name>
            <url>http://source.eict.vpdc/nexus/content/repositories/snapshots/</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <finalName>${groupId}.${artifactId}-${version}</finalName>
        <sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<!-- This include everything else under src directory -->
				<!-- Allows copying of packageinfo to output dir -->
				<directory>${basedir}/src</directory>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
			</resource>
		</resources>
		<pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>2.4.0-SNAPSHOT</version>
                    <extensions>true</extensions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-Vendor>Elster</Bundle-Vendor>
                        <Bundle-RequiredExecutionEnvironment>JavaSE-1.7</Bundle-RequiredExecutionEnvironment>
						<_include>bnd.bnd</_include>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

	<modules>
		<module>../bootstrap</module>
		<module>../cbo</module>
		<module>../domain.util</module>
		<module>../extjs</module>
		<module>../http.whiteboard</module>
		<module>../ids</module>
		<module>../install</module>
		<module>../metering</module>
		<module>../metering.extjs</module>
		<module>../metering.rest</module>
		<module>../orm</module>
		<module>../orm.cache</module>
		<module>../osgi.goodies</module>
		<module>../parties</module>
		<module>../pubsub</module>
		<module>../rest.util</module>
		<module>../rest.whiteboard</module>
		<module>../security.thread</module>
		<module>../test</module>
		<module>../transaction</module>
		<module>../users</module>
		<module>../util</module>
	</modules>

</project>