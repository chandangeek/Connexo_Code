        <profile>
            <id>sencha-dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/web</directory>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>sencha-build</id>
            <properties>
                <sencha.ext.dir>${project.basedir}/../com.elster.jupiter.extjs/src/main/web/js/ext</sencha.ext.dir>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/web</directory>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>sencha-compile</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target unless="skipSencha">
                                        <echo>Sencha build</echo>
                                        <echo>Using Sencha CMD in ${sencha.cmd.dir}</echo>
                                        <echo>Using Ext lib in ${sencha.ext.dir}</echo>
                                        <property name="build.dir" value="${project.build.directory}/web"/>
                                        <property name="build.temp.dir" value="${project.build.directory}/webtemp"/>
                                        <property name="cmd.dir" value="${sencha.cmd.dir}"/>
                                        <property name="ext.dir" value="${sencha.ext.dir}"/>
                                        <ant antfile="build.xml" target="build" dir="./src/main/web/${js.dir}"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.felix</groupId>
                        <artifactId>maven-bundle-plugin</artifactId>
                        <configuration>
                            <instructions>
                                <Include-Resource>{maven-resources}</Include-Resource>
                            </instructions>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>add-compiled-js</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>add-resource</goal>
                                </goals>
                                <configuration>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/target/web</directory>
                                            <targetPath>${js.dir}</targetPath>
                                            <includes>
                                                <!--  WATCH OUT : our build is case sensitive !!!! -->
                                                <include>*.html</include>
                                                <include>*.js</include>
                                                <include>resources/**/*</include>
                                            </includes>
                                            <excludes>
                                                <exclude>resources/packages/**/*</exclude>
                                                <exclude>resources/resources/**/*</exclude>
                                                <exclude>resources/sass/**/*</exclude>
                                            </excludes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>

            </build>
        </profile>
