<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.elster.jupiter</groupId>
        <artifactId>platform</artifactId>
        <version>1.3.0${revision}</version>
        <relativePath>../com.elster.jupiter.platform/pom.xml</relativePath>
    </parent>
    <artifactId>search.rest</artifactId>
    <version>3.0.0${revision}</version>
    <packaging>bundle</packaging>
    <name>[Jupiter] com.elster.jupiter.search.rest</name>

  <profiles>
    <profile>
      <id>restdoc</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.qmino</groupId>
            <artifactId>miredot-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>restdoc</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <_include>bnd.bnd</_include>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>
    <dependency>
        <groupId>javax.ws.rs</groupId>
        <artifactId>javax.ws.rs-api</artifactId>
    </dependency>
    <dependency>
        <groupId>org.glassfish.jersey.core</groupId>
        <artifactId>jersey-server</artifactId>
    </dependency>
    <dependency>
        <groupId>org.glassfish.jersey.core</groupId>
        <artifactId>jersey-client</artifactId>
    </dependency>
    <dependency>
        <groupId>com.elster.jupiter</groupId>
        <artifactId>util</artifactId>
    </dependency>
    <dependency>
        <groupId>com.elster.jupiter</groupId>
        <artifactId>domain.util</artifactId>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>search</artifactId>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>rest.util</artifactId>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>properties</artifactId>
    </dependency>

    <!-- Testing -->
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>transaction</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>orm</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>devtools</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>devtools.rest</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.glassfish.jersey.test-framework.providers</groupId>
      <artifactId>jersey-test-framework-provider-inmemory</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.jayway.jsonpath</groupId>
      <artifactId>json-path</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.servicemix.bundles</groupId>
      <artifactId>org.apache.servicemix.bundles.json</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
</project>