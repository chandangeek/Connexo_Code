<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.elster.jupiter.subsystem</groupId>
    <artifactId>parent</artifactId>
    <version>1.1.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>[Jupiter Subsystem] com.elster.jupiter.subsystem.parent</name>

    <organization>
        <name>Elster</name>
        <url>www.elster.com</url>
    </organization>

    <scm>
        <connection>scm:git:ssh://git@source.eict.vpdc/com/elster/jupiter/subsystem/parent</connection>
    </scm>
    <!-- Repositories specification. -->
    <repositories>
        <repository>
            <id>eict-public-snapshots</id>
            <name>EnergyICT snapshots repository group</name>
            <url>http://source.eict.vpdc/nexus/content/groups/public-snapshots/
            </url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>eict-public</id>
            <name>EnergyICT public repository group</name>
            <url>http://source.eict.vpdc/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    <!-- Distribution management. -->
    <distributionManagement>
        <repository>
            <id>eict-releases</id>
            <name>EnergyICT releases repository</name>
            <url>http://source.eict.vpdc/nexus/content/repositories/releases/</url>
        </repository>

        <snapshotRepository>
            <id>eict-snapshots</id>
            <name>EnergyICT snapshots repository</name>
            <url>http://source.eict.vpdc/nexus/content/repositories/snapshots/</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.5.3</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <version>1.8</version>
                    <configuration>
                        <licenseMerges>
                            <licenseMerge>Apache 2.0|The Apache Software License, Version 2.0</licenseMerge>
                            <licenseMerge>Apache 2.0|apache_v2</licenseMerge>
                            <licenseMerge>Apache 2.0|Apache License 2.0</licenseMerge>
                            <licenseMerge>Apache 2.0|Apache License, version 2.0</licenseMerge>
                            <licenseMerge>Apache 2.0|Apache Software License - Version 2.0</licenseMerge>
                            <licenseMerge>Apache 2.0|Apache 2</licenseMerge>
                            <licenseMerge>Apache 2.0|Apache License, Version 2.0</licenseMerge>
                            <licenseMerge>CDDL 1.0|Common Development and Distribution license (CDDL) Version 1.0
                            </licenseMerge>
                            <licenseMerge>CDDL 1.0|Common Development and Distribution License (CDDL) v1.0
                            </licenseMerge>
                            <licenseMerge>CDDL 1.0|cddl_v1</licenseMerge>
                            <licenseMerge>GNU LGPL 2.1|GNU Lesser General Public License (LGPL), Version 2.1
                            </licenseMerge>
                            <licenseMerge>GNU LGPL 2.1|GNU Lesser General Public License, version 2.1</licenseMerge>
                            <licenseMerge>GNU LGPL 2.1|lgpl_v2_1</licenseMerge>
                            <licenseMerge>GNU LGPL 2.1|GNU Lesser General Public License, Version 2.1</licenseMerge>
                            <licenseMerge>GNU LGPL 3|GNU LESSER GENERAL PUBLIC LICENSE, Version 3</licenseMerge>
                            <licenseMerge>GNU LGPL 3|GNU Lesser General Public Licence</licenseMerge>
                            <licenseMerge>GNU LGPL 3|GNU Lesser General Public License</licenseMerge>
                            <licenseMerge>GNU LGPL 3|GNU LESSER GENERAL PUBLIC LICENSE</licenseMerge>
                            <licenseMerge>GNU LGPL 3|COMMON DEVELOPMENT AND DISTRIBUTION LICENSE (CDDL) Version 1.0
                            </licenseMerge>
                            <licenseMerge>CDDL 1.0|Dual license consisting of the CDDL v1.0 and GPL v2</licenseMerge>
                            <licenseMerge>CDDL 1.0|CDDL+GPLv2</licenseMerge>
                            <licenseMerge>CDDL 1.0|CDDL+GPL</licenseMerge>
                            <licenseMerge>CDDL 1.0|CDDL+GPL License</licenseMerge>
                            <licenseMerge>CDDL 1.1|Dual license consisting of the CDDL v1.1 and GPL v2</licenseMerge>
                            <licenseMerge>CDDL 1.1|CDDL1_1+GPLv2</licenseMerge>
                            <licenseMerge>CDDL 1.0|CDDL + GPLv2 with classpath exception</licenseMerge>
                            <licenseMerge>New BSD License|The BSD License|BSD|New BSD license</licenseMerge>
                            <licenseMerge>Eclipse Public License 1.0|Eclipse Public License - Version 1.0</licenseMerge>
                            <licenseMerge>Common Public License|CPL</licenseMerge>
                        </licenseMerges>
                        <useMissingFile>true</useMissingFile>
                        <excludedGroups>com\.elster.*|com\.energyict.*|com\.yellowfin.*</excludedGroups>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>1.3.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <extensions>true</extensions>
                    <version>2.5.3</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>buildnumber-maven-plugin</artifactId>
                    <version>1.3</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-no-snapshots</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireReleaseDeps>
                                    <message>No Snapshots Allowed during release</message>
                                    <onlyWhenRelease>true</onlyWhenRelease>
                                </requireReleaseDeps>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Vendor>Elster</Bundle-Vendor>
                        <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
                        <Git-SHA-1>${buildNumber}</Git-SHA-1>
                        <Git-branch>${scmBranch}</Git-branch>
                        <Build-timestamp>${timestamp}</Build-timestamp>
                        <_sources>${include.source}</_sources>
                        <_include>bnd.bnd</_include>
                    </instructions>
                    <supportedProjectTypes>
                        <supportedProjectType>bundle</supportedProjectType>
                    </supportedProjectTypes>
                </configuration>
                <executions>
                    <execution>
                        <id>bundle</id>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <configuration>
                    <timestampFormat>{0,date,yyyy-MM-dd'T'HH:mm:ss.SSSZ}</timestampFormat>
                </configuration>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>