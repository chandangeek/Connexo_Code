<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.energyict</groupId>
    <artifactId>mdc.parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../com.energyict.comserver.parent/pom.xml</relativePath>
  </parent>

  <artifactId>mdc-engine-config</artifactId>
  <packaging>bundle</packaging>
  <version>${comserver.version}</version>
  <name>[MDC] mdc.engine.model</name>
  <description>contains the configuration aspects of the components that implement the engine of data collection</description>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>orm</artifactId>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc-common</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc-protocols-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc-protocols</artifactId>
      <version>${jupiter.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict.dataconcentrator.external</groupId>
      <artifactId>serialio</artifactId>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>devtools</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.protocol.pluggable</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>bootstrap.h2</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20090211</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-xc</artifactId>
      <version>1.9.9</version>
    </dependency>

    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>devtools.persistence</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>messaging.h2</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
            <configuration>
              <argLine>-Xmx2g -Xss=512m -XX:PermSize=512m</argLine>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
</project>
