<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.energyict</groupId>
        <artifactId>mdc.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../com.energyict.comserver.parent/pom.xml</relativePath>
    </parent>

    <artifactId>mdc.issue.datacollection</artifactId>
    <version>${comserver.version}</version>
    <packaging>bundle</packaging>
    <name>[MDC] mdc.issue.datacollection</name>
    <description>
        Contains MDC datacollection issue templates
    </description>

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>

        <!-- Jupiter modules -->


        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>domain.util</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>metering</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>orm</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>util</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>appserver</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>issue</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdc.pluggable</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdc.device.config</artifactId>
        </dependency>
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdc.device.data</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Drools dependencies -->
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>drools-integration</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
        </dependency>


        <!-- Test dependencies -->
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>devtools</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>devtools.persistence</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>bootstrap.h2</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.elster.jupiter</groupId>
            <artifactId>messaging.h2</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-xjc</artifactId>
            <version>2.1.6</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <_include>bnd.bnd</_include>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
