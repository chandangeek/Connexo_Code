<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.energyict</groupId>
    <artifactId>mdc.parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../com.energyict.comserver.parent/pom.xml</relativePath>
  </parent>

  <artifactId>mdc.engine</artifactId>
  <packaging>bundle</packaging>
  <name>[MDC] mdc.engine [init CES]</name>
  <description>
    Contains the full ComServer engine
  </description>

  <dependencies>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>util</artifactId>
      <version>${jupiter.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.common</artifactId>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.io</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.tasks</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.device.config</artifactId>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.device.data</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.device.topology</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.protocols.api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.energyict</groupId>
      <artifactId>mdc.engine.config</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>

    <dependency>
      <groupId>javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>3.4.GA</version>
    </dependency>

    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-server</artifactId>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-websocket</artifactId>
    </dependency>
    <dependency>
            <groupId>org.glassfish.jersey.media</groupId>
            <artifactId>jersey-media-json-jackson</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <scope>provided</scope>
    </dependency>

    <!-- AOP -->
    <dependency>
      <groupId>org.aspectj</groupId>
      <artifactId>aspectjrt</artifactId>
    </dependency>

    <!-- Testing -->
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>devtools</artifactId>
      <version>${jupiter.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>devtools.persistence</artifactId>
      <version>${jupiter.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>bootstrap.h2</artifactId>
      <version>${jupiter.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.elster.jupiter</groupId>
      <artifactId>messaging.h2</artifactId>
      <version>${jupiter.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>aspectj-maven-plugin</artifactId>
        <version>${aspectj.maven.plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <!-- Weaves all the main classes -->
              <goal>compile</goal>
              <!-- Weaves all the test classes
             <goal>test-compile</goal -->
            </goals>
            <configuration>
              <source>${maven.compiler.source}</source>
              <target>${maven.compiler.target}</target>
              <complianceLevel>${maven.compiler.target}</complianceLevel>
              <showWeaveInfo>false</showWeaveInfo>
              <verbose>false</verbose>
              <proceedOnError>false</proceedOnError>
              <Xlint>error</Xlint>
              <Xlintfile>src/main/resources/XlintMdc.properties</Xlintfile>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.aspectj</groupId>
            <artifactId>aspectjtools</artifactId>
            <version>${aspectj.version}</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
            <configuration>
              <argLine>-Xmx2g -XX:PermSize=512m</argLine>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
