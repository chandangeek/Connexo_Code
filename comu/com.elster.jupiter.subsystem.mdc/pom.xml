                <executions>
                    <execution>
                        <id>default-cli</id>
                        <goals>
                            <goal>add-third-party</goal>
                        </goals>
                        <configuration>
                            <includeTransitiveDependencies>false</includeTransitiveDependencies>
                            <acceptPomPackaging>true</acceptPomPackaging>
                            <thirdPartyFilename>multisense-third-party.txt</thirdPartyFilename>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>multisense</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <archiverConfig>
                        <duplicateBehavior>skip</duplicateBehavior>
                    </archiverConfig>

                    <descriptors>
                        <descriptor>assembly/assembly.xml</descriptor>
                    </descriptors>

                    <finalName>multisense-v${project.version}</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
            </plugin>
        </plugins>
