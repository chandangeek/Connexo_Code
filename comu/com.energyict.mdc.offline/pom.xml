    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-poms</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>pom</includeTypes>
                            <includeGroupIds>com.jidesoft</includeGroupIds>
                            <copyPom>true</copyPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>set-cxo-version-html</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <replace token= "connexo-version" value="${commercial.version}" dir="src/main/resources">
                                    <include name="offline.properties"/>
                                </replace>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>reset-version-variable</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                                <replace token= "${commercial.version}" value="connexo-version" dir="src/main/resources">
                                    <include name="offline.properties"/>
                                </replace>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
