<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.energyict</groupId>
        <artifactId>mdc.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../com.energyict.comserver.parent/pom.xml</relativePath>
    </parent>

    <artifactId>mdc-protocols</artifactId>
    <packaging>bundle</packaging>
    <version>${comserver.version}</version>
    <name>[MDC] Protocols</name>
    <description>
        Contains all the protocol implementations into one bundle
    </description>

    <properties>
        <fest-assertions.version>2.0M8</fest-assertions.version>
        <protocol.mockito.version>1.9.0</protocol.mockito.version>
        <proguard.maven.version>2.0.4</proguard.maven.version>
        <proguard.version>4.8</proguard.version>
    </properties>

    <dependencies>
        <dependency>
          <groupId>com.energyict</groupId>
          <artifactId>mdc.dynamic</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>com.energyict</groupId>
          <artifactId>mdc-common</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>com.energyict</groupId>
          <artifactId>mdc-protocols-api</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>mdc-all</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.aspectj</groupId>
                    <artifactId>aspectjrt</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.perf4j</groupId>
                    <artifactId>perf4j</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>${protocol.mockito.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-module-junit4</artifactId>
            <version>1.4.10</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-api-mockito</artifactId>
            <version>1.4.10</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.easytesting</groupId>
            <artifactId>fest-assert-core</artifactId>
            <version>${fest-assertions.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.3</version>
        </dependency>
        <dependency>
            <groupId>com.energyict.dataconcentrator.external</groupId>
            <artifactId>serialio</artifactId>
        </dependency>

        <dependency>
            <groupId>com.energyict</groupId>
            <artifactId>xmodem</artifactId>
            <version>1.0.0</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>javax.jms</groupId>
            <artifactId>jms</artifactId>
            <version>1.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.2.1</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.activation</groupId>
                    <artifactId>activation</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.mail</groupId>
                    <artifactId>mail</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis-jaxrpc</artifactId>
            <version>1.2.1</version>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.3.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <version>4.3.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.aspectj</groupId>
            <artifactId>aspectjrt</artifactId>
            <version>1.7.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
