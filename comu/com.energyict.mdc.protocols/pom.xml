    <!--Include the protocols and their transitive dependencies into the jar-->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <_include>bnd.bnd</_include>
                        <Embed-Dependency>
                            groupId=!com.elster.jupiter;
                            scope=!test;
                            artifactId=!commons-logging|serialio-xmodemapi-osgi|javax.servlet-api|org.osgi.core|org.osgi.compendium|mdc.*
                        </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>
                <executions>
                    <execution>
                        <id>include-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


