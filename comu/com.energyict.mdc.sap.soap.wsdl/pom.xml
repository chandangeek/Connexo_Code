                            <wsdlLocation>/wsdl/sap/UtilitiesTimeSeriesERPItemBulkChangeRequest_E_OutService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.utilitiestimeseriesbulkchangerequest
                            </packageName>
                        </configuration>
                    </execution>
                    <!--[SAP] Remotely Disconnecting and Reconnecting a Meter-->
                    <execution>
                        <id>SmartMeterConnectionStatusChangeRequestCreate</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/SmartMeterUtilitiesConnectionStatusChangeRequestERPCreateRequest_E_In.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/SmartMeterUtilitiesConnectionStatusChangeRequestERPCreateRequest_E_In.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.smartmeterconnectionstatuschangerequestcreate
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>SmartMeterConnectionStatusChangeRequestCreateConfirmation</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/SmartMeterUtilitiesConnectionStatusChangeRequestERPCreateConfirmation_E_OutService.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/SmartMeterUtilitiesConnectionStatusChangeRequestERPCreateConfirmation_E_OutService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.smartmeterconnectionstatuschangerequestcreateconfirmation
                            </packageName>
                        </configuration>
                    </execution>
                    <!--[SAP] Outbound web service to send events to SAP -->
                    <execution>
                        <id>OutboundWebServiceToSendEventsToSAP</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/UtilitiesSmartMeterEventERPBulkCreateRequestService.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/UtilitiesSmartMeterEventERPBulkCreateRequestService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.utilitiessmartmetereventerpbulkcreaterequestservice
                            </packageName>
                        </configuration>
                    </execution>
                </executions>

                <configuration>
                    <vmArgs>
                        <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                    </vmArgs>
                    <target>2.1</target>
                    <sourceDestDir>${basedir}/target/generated/src/main/java</sourceDestDir>
                    <wsdlDirectory>${basedir}/src/main/resources/wsdl</wsdlDirectory>
                    <bindingDirectory>${basedir}/src/main/resources/binding</bindingDirectory>
                    <extension>true</extension>
                    <keep>true</keep>
                    <verbose>false</verbose>
                    <xdebug>false</xdebug>
                    <staleFile>${project.build.directory}/jaxws/stale/.global2StaleFlag</staleFile>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
