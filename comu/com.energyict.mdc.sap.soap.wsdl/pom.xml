<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.energyict</groupId>
        <artifactId>mdc.parent</artifactId>
        <version>0.1.0-Heracles-SNAPSHOT</version>

    </parent>

    <artifactId>mdc.sap.soap.wsdl</artifactId>
    <packaging>bundle</packaging>
    <name>[MDC] mdc.sap.soap.wsdl</name>
    <description>SAP WSDL resources generation</description>

    <properties>
        <sonar.exclusions>${basedir}/target/generated-sources/**</sonar.exclusions>
        <sonar.cpd.exclusions>${basedir}/target/generated-sources/**</sonar.cpd.exclusions>
        <sonar.coverage.exclusions>${basedir}/target/generated-sources/**</sonar.coverage.exclusions>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/target/generated/src/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jax-ws-commons</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <executions>
                    <!--[SAP] SAP Requests Meter reading from HES-->
                    <!--[SAP] Reading One Customer's Meter: On Demand Read-->
                    <execution>
                        <id>SmartMeterMeterReadingCreateRequest</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/SmartMeterMeterReadingDocumentERPCreateRequest_E_In.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/SmartMeterMeterReadingDocumentERPCreateRequest_E_In.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.smartmetermeterreadingcreaterequest
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>SmartMeterMeterReadingBulkCreateRequest</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/SmartMeterMeterReadingDocumentERPBulkCreateRequest_E_In.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/SmartMeterMeterReadingDocumentERPBulkCreateRequest_E_In.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.smartmetermeterreadingbulkcreaterequest
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>SmartMeterMeterReadingCreateConfirmation</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/SmartMeterMeterReadingDocumentERPCreateConfirmation_E_OutService.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/SmartMeterMeterReadingDocumentERPCreateConfirmation_E_OutService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.smartmetermeterreadingcreateconfirmation
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>SmartMeterMeterReadingBulkCreateConfirmation</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/SmartMeterMeterReadingDocumentERPBulkCreateConfirmation_E_OutService.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/SmartMeterMeterReadingDocumentERPBulkCreateConfirmation_E_OutService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.smartmetermeterreadingbulkcreateconfirmation
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>MeterReadingResultCreateRequest</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/MeterReadingDocumentERPResultCreateRequest_E_OutService.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/MeterReadingDocumentERPResultCreateRequest_E_OutService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.meterreadingresultcreaterequest
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>MeterReadingResultBulkCreateRequest</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/MeterReadingDocumentERPResultBulkCreateRequest_E_OutService.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/MeterReadingDocumentERPResultBulkCreateRequest_E_OutService.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.meterreadingresultbulkcreaterequest
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>MeterReadingResultCreateConfirmation</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/MeterReadingDocumentERPResultCreateConfirmation_E_In.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/MeterReadingDocumentERPResultCreateConfirmation_E_In.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.meterreadingresultcreateconfirmation
                            </packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>MeterReadingResultBulkCreateConfirmation</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/MeterReadingDocumentERPResultBulkCreateConfirmation_E_In.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/MeterReadingDocumentERPResultBulkCreateConfirmation_E_In.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.meterreadingresultbulkcreateconfirmation
                            </packageName>
                        </configuration>
                    </execution>
                    <!--[SAP] Uploading Usage Data to SAP EDM-->
                    <execution>
                        <id>UtilitiesTimeSeriesBulkCreateConfirmation</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>
                                    sap/UtilitiesTimeSeriesERPItemBulkCreateConfirmation_E_In.wsdl
                                </wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>/wsdl/sap/UtilitiesTimeSeriesERPItemBulkCreateConfirmation_E_In.wsdl</wsdlLocation>
                            <packageName>
                                com.energyict.mdc.sap.soap.wsdl.webservices.utilitiestimeseriesbulkcreateconfirmation
                            </packageName>
                        </configuration>
