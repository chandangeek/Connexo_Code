        <profile>
            <id>clean-copy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-clean-plugin</artifactId>
                        <configuration>
                            <filesets combine.children="append">
                                <fileset>
                                    <directory>${felix.load.folder}</directory>
                                    <includes>
                                        <include>${project.groupId}.${project.artifactId}-*</include>
                                    </includes>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
