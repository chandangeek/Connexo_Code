                            <restModel>
                                <restFramework>
                                    <name>jax-rs</name>
                                </restFramework>
                            </restModel>
                            <output>
                                <html>
                                    <location>miredot/${project.version}</location>
                                </html>
                            </output>
                            <!-- insert other configuration here (optional) -->
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
