    <profiles>
        <profile>
            <id>restdoc</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.elster.jupiter</groupId>
                                            <artifactId>public.rest.util</artifactId>
                                            <type>jar</type>
                                            <classifier>sources</classifier>
                                            <includes>**/*.java</includes>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/public.rest.util
                                            </outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.qmino</groupId>
                        <artifactId>miredot-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>v1-doc</id>
                                <goals>
                                    <goal>restdoc</goal>
                                </goals>
                                <configuration>
                                    <output>
                                        <title>Platform API v1</title>
                                        <html>
                                            <baseUrl>http://localhost:8080/public/api/coko/v1</baseUrl>
                                            <location>miredot/${project.version}/v1</location>
                                        </html>
                                    </output>
                                    <restModel>
                                        <filter>
                                            <includes>
                                                <include>com.elster.jupiter.kore.api.v1.*</include>
                                            </includes>
                                            <excludes>
                                                <exclude>com.elster.jupiter.kore.api.v2.*</exclude>
                                            </excludes>
                                        </filter>
                                    </restModel>
                                </configuration>
                            </execution>
                            <execution>
                                <id>v2-doc</id>
                                <goals>
                                    <goal>restdoc</goal>
                                </goals>
                                <configuration>
                                    <output>
                                        <title>Platform API v2</title>
                                        <html>
                                            <baseUrl>http://localhost:8080/public/api/coko/v2</baseUrl>
                                            <location>miredot/${project.version}/v2</location>
                                        </html>
                                    </output>
                                    <restModel>
                                        <filter>
                                            <includes>
                                                <include>com.elster.jupiter.kore.api.v2.*</include>
                                            </includes>
                                            <excludes>
                                                <exclude>com.elster.jupiter.kore.api.v1.*</exclude>
                                            </excludes>
                                        </filter>
                                    </restModel>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <analysis>
                                <checks>
                                    <JAVADOC_MISSING_SUMMARY>warn</JAVADOC_MISSING_SUMMARY>
                                    <JAVADOC_MISSING_INTERFACEDOCUMENTATION>warn
                                    </JAVADOC_MISSING_INTERFACEDOCUMENTATION>
                                    <JAVADOC_MISSING_PARAMETER_DOCUMENTATION>warn
                                    </JAVADOC_MISSING_PARAMETER_DOCUMENTATION>
                                    <JAVADOC_MISSING_EXCEPTION_DOCUMENTATION>warn
                                    </JAVADOC_MISSING_EXCEPTION_DOCUMENTATION>
                                    <JAVADOC_MISSING_AUTHORS>ignore</JAVADOC_MISSING_AUTHORS>
                                    <JAXRS_MISSING_PRODUCES>warn</JAXRS_MISSING_PRODUCES>
                                    <JAXRS_MISSING_CONSUMES>warn</JAXRS_MISSING_CONSUMES>
                                    <JAXRS_MISSING_PATH_PARAM>warn</JAXRS_MISSING_PATH_PARAM>
                                    <REST_UNMAPPED_EXCEPTION>failbuild</REST_UNMAPPED_EXCEPTION>
                                    <UNREACHABLE_RESOURCE>warn</UNREACHABLE_RESOURCE>
                                    <PARTIAL_RESOURCE_OVERLAP>warn</PARTIAL_RESOURCE_OVERLAP>
                                </checks>
                            </analysis>

                            <restModel>
                                <externalSources>
                                    <sourceDirs>
                                        <sourceDir>
                                            ${project.build.directory}/public.rest.util
                                        </sourceDir>
                                    </sourceDirs>
                                </externalSources>
                                <httpStatusCodes>
                                    <httpStatusCode>
                                        <httpCode>200</httpCode>
                                        <document>get,put,propfind</document>
                                        <defaultMessage>The service call has completed successfully.</defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>204</httpCode>
                                        <document>delete</document>
                                        <defaultMessage>The service call has completed successfully, you shouldn't don't
                                            expect and answer
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>201</httpCode>
                                        <document>post</document>
                                        <defaultMessage>The service call has completed successfully and the requested
                                            entity has been created.
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>202</httpCode>
                                        <document>post,put</document>
                                        <defaultMessage>The service call has been accepted for processing, results may
                                            not be visible right away.
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>401</httpCode>
                                        <document>always</document>
                                        <defaultMessage>The user is logged in, but is not authorized to use this
                                            service.
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>404</httpCode>
                                        <document>always</document>
                                        <defaultMessage>The entity referred to in the URL does not exist.
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>409</httpCode>
                                        <document>put,post,delete</document>
                                        <defaultMessage>A version conflict was detected while processing the service
                                            call.
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>400</httpCode>
                                        <document>put,post</document>
                                        <document>explicit: com.elster.jupiter.rest.util.ConstraintViolationInfo
                                        </document>
                                        <defaultMessage>Invalid JSON structure, missing parameters or constraint
                                            violations
                                        </defaultMessage>
                                    </httpStatusCode>
                                    <httpStatusCode>
                                        <httpCode>500</httpCode>
                                        <document>always</document>
                                        <defaultMessage>Internal server exception. The service call did not succeed.
                                        </defaultMessage>
                                    </httpStatusCode>
                                </httpStatusCodes>
                                <titleNamingStrategies>
                                    <strategy>tag: summary</strategy>
                                    <strategy>tag: title</strategy>
                                    <strategy>firstsentence</strategy>
                                </titleNamingStrategies>
                                <typeReplacements>
                                    <typeReplacement>
                                        <source>javax.ws.rs.core.Link</source>
                                        <target>com.elster.jupiter.rest.api.util.v1.hypermedia.doc.LinkJson</target>
                                        <type>alternative</type>
                                    </typeReplacement>
                                    <typeReplacement>
                                        <source>com.elster.jupiter.rest.util.JsonQueryParameters</source>
                                        <target>com.elster.jupiter.rest.api.util.v1.hypermedia.doc.PagingParametersJson
                                        </target>
                                        <type>alternative</type>
                                    </typeReplacement>
                                    <typeReplacement>
                                        <source>java.time.Instant</source>
                                        <target>Milliseconds since epoch</target>
                                        <type>literal</type>
                                    </typeReplacement>
                                    <typeReplacement>
                                        <source>javax.ws.rs.core.Response</source>
                                        <target>Response</target>
                                        <type>literal</type>
                                    </typeReplacement>
                                </typeReplacements>
                            </restModel>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
